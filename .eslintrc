{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaFeatures": {
        "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "babel",
    "promise",
    "jest"
  ],
  "rules": {
    "import/no-extraneous-dependencies": "off",
    "class-methods-use-this": "off",
    "quotes": ["error", "single"],
    "semi": ["error", "always"]
  }
}
